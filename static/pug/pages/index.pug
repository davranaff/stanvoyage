					time: {datetime: '2022-05-12', dateText: 'May 12, 2022'}
				})
				+post-aria({
					mod: 'post-aria-2',
					img: 'blog-post-5-568x492',
					title: '12 Things Not to Do When You Travel',
					time: {datetime: '2022-05-17', dateText: 'May 17, 2022'}
				})
					+post-aria({
						mod: 'post-aria-2',
						img: 'blog-post-6-568x492',
						title: 'San Francisco Itinerary: What to Do in 3 (or More) Days',
						time: {datetime: '2022-05-12', dateText: 'May 12, 2022'}
					})
