extends  ../_skeleton

//- Includes
include ../sections/_header-corporate
include ../components/_ui-box-team
include ../components/_ui-box-icon
include ../components/_ui-quote
include ../components/_ui-counters
include ../components/_ui-inline-subscribe-form
include ../components/_ui-product
include ../components/_ui-posts


block variables
	- var activeCategory = 'home'
	- var pageName = 'Home'
	- var style = '2'

block page
	// Page Header
	+header-corporate({})

	// Swiper
	section.section.swiper-container.swiper-slider.swiper-slider-corporate.swiper-pagination-style-2( data-direction='vertical' data-swiper!={
		autoplay: {
			delay: 5000
		},
		simulateTouch: 'true',
	})
		.swiper-wrapper.text-start
			.swiper-slide.context-dark(data-slide-bg='images/slider-4-slide-1-1920x678.jpg')
				.swiper-slide-caption.section-md
					.container: .row: .col-md-10
						h6.text-uppercase(data-caption-animate='fadeInRight' data-caption-delay='0') Enjoy the Best Destinations with Our Travel Agency
						h2.oh.fw-light(data-caption-animate='slideInUp' data-caption-delay='100')
							span Explore
							span.fw-bold  The World
						a.button.button-default-outline.button-ujarak(href='#' data-caption-animate='fadeInLeft' data-caption-delay='0') Get in touch
			.swiper-slide.context-dark(data-slide-bg='images/slider-4-slide-2-1920x678.jpg')
				.swiper-slide-caption.section-md
					.container: .row: .col-md-10
						h6.text-uppercase(data-caption-animate='fadeInRight' data-caption-delay='0') A team of professional Travel Experts
						h2.oh.fw-light(data-caption-animate='slideInUp' data-caption-delay='100')
							span Trust
							span.fw-bold  Our Experience
						a.button.button-default-outline.button-ujarak(href='#' data-caption-animate='fadeInLeft' data-caption-delay='0') Get in touch
			.swiper-slide.context-dark(data-slide-bg='images/slider-4-slide-3-1920x678.jpg')
				.swiper-slide-caption.section-md
					.container: .row: .col-md-10
						h6.text-uppercase(data-caption-animate='fadeInRight' data-caption-delay='0') Build your Next Holiday Trip with Us
						h2.oh.fw-light(data-caption-animate='slideInUp' data-caption-delay='100')
							span Create
							span.fw-bold  Your Tour
						a.button.button-default-outline.button-ujarak(href='#' data-caption-animate='fadeInLeft' data-caption-delay='0') Get in touch
		// Swiper Pagination
		.swiper-pagination

	// Section Box Categories
	section.section.section-lg.section-top-1.bg-gray-4
		.container.offset-negative-1
			.box-categories.cta-box-wrap: .box-categories-content
				.row.justify-content-center
					.col-md-4.wow.fadeInDown(data-wow-delay='.2s').col-9
						ul.list-marked-2.box-categories-list
							li
								a(href='single-tour.html')
									+jpg('cta-1-368x420')
								h5.box-categories-title Balloon Flights
					.col-md-4.wow.fadeInDown(data-wow-delay='.2s').col-9
						ul.list-marked-2.box-categories-list
							li
								a(href='single-tour.html')
									+jpg('cta-2-368x420')
								h5.box-categories-title Mountain Holiday
					.col-md-4.wow.fadeInDown(data-wow-delay='.2s').col-9
						ul.list-marked-2.box-categories-list
							li
								a(href='single-tour.html')
									+jpg('cta-3-368x420')
								h5.box-categories-title Beach Holidays
			a.link-classic.wow.fadeInUp(href='our-tours.html') Other Tours
				span
			// Owl Carousel
	// Discover New Horizons
	section.section.section-sm.section-first.bg-default.text-md-start
		.container
			.row.row-50.align-items-center.justify-content-center.justify-content-xl-between
				.col-lg-6.text-center.wow.fadeInUp
					+jpg('index-3-556x382')
				.col-lg-6.wow.fadeInRight(data-wow-delay='.1s'): .box-width-lg-470
