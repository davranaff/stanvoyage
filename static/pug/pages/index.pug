	section.section.section-sm.section-top-0.section-fluid.section-relative.bg-gray-4: .container-fluid
		h6.gallery-title
			| Gallery

		// Owl Carousel
		.owl-carousel.owl-classic.owl-dots-secondary(data-items='1', data-sm-items='2', data-md-items='3', data-lg-items='4', data-xl-items='5', data-xxl-items='6', data-stage-padding='15', data-xxl-stage-padding='0', data-margin='30', data-autoplay='true', data-nav='true', data-dots='true')
