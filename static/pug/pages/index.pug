					// Bootstrap tabs
					#tabs-7.tabs-custom.tabs-horizontal.tabs-line.tabs-line-big.tabs-line-style-2.text-center.text-md-start
						// Nav tabs
						ul.nav.nav-tabs
							li.nav-item(role='presentation'): a.nav-link.active(href='#tabs-7-1' data-bs-toggle='tab') About us
							li.nav-item(role='presentation'): a.nav-link(href='#tabs-7-2' data-bs-toggle='tab') Why choose us
							li.nav-item(role='presentation'): a.nav-link(href='#tabs-7-3' data-bs-toggle='tab') Our mission

						// Tab panes
						.tab-content
							div#tabs-7-1.tab-pane.fade.show.active
								p Wonder Tour is committed to bringing our clients the best in value and quality travel arrangements. We are passionate about travel and sharing the world's wonders with you.
								.group-md.group-middle
									a.button.button-secondary.button-pipaluk(href='contact-us.html') Get in Touch
									a.button.button-black-outline.button-md(href='about.html') Read More

							div#tabs-7-2.tab-pane.fade
								p We are proud to offer excellent quality and value for money in our tours, which give you the chance to experience your chosen destination in an authentic and exciting way.
								.group-md.group-middle
									a.button.button-secondary.button-pipaluk(href='contact-us.html') Get in Touch
									a.button.button-black-outline.button-md(href='about.html') Read More

							div#tabs-7-3.tab-pane.fade
								p Our mission is to provide the ultimate travel planning experience while becoming a one-stop shop for every travel service available in the industry.
								.group-md.group-middle
									a.button.button-secondary.button-pipaluk(href='contact-us.html') Get in Touch
									a.button.button-black-outline.button-md(href='about.html') Read More
	//	Our Services
	section.section.section-sm
		.container
			h3 Our Services
			.row.row-30
				.col-sm-6.col-lg-4
					+box-icon-classic({
						align: 'flex-column flex-md-row text-md-left flex-lg-column text-lg-center flex-xl-row text-xl-left',
						icon: 'fl-bigmug-line-equalization3',
						title: 'Personalized Matching',
						text: 'Our unique matching system lets you find just the tour you want for your next holiday.'
					})
				.col-sm-6.col-lg-4
					+box-icon-classic({
						align: 'flex-column flex-md-row text-md-left flex-lg-column text-lg-center flex-xl-row text-xl-left',
						icon: 'fl-bigmug-line-circular220',
						title: 'Wide Variety of Tours',
						text: 'We offer a wide variety of personally picked tours with destinations all over the globe.'
					})
				.col-sm-6.col-lg-4
					+box-icon-classic({
						align: 'flex-column flex-md-row text-md-left flex-lg-column text-lg-center flex-xl-row text-xl-left',
						icon: 'fl-bigmug-line-favourites5',
						title: 'Highly Qualified Service',
						text: 'Our tour managers are qualified, skilled, and friendly to bring you the best service.'
