						ul.nav.nav-tabs
							li.nav-item(role='presentation'): a.nav-link.active(href='#tabs-4-1' data-bs-toggle='tab') Experience
							li.nav-item(role='presentation'): a.nav-link(href='#tabs-4-2' data-bs-toggle='tab') Skills
							li.nav-item(role='presentation'): a.nav-link(href='#tabs-4-3' data-bs-toggle='tab') Mission

