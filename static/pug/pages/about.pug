extends  ../_skeleton

//- Includes
include ../sections/_header-corporate
include ../components/_ui-progress-bar-linear
include ../components/_ui-progress-circle
include ../components/_ui-quote
include ../components/_ui-counters
include ../components/_ui-posts

block variables
	- var activeCategory = 'about'
	- var pageName = 'About'

block page
	// Page Header
	+header-corporate({})

	+breadcrumbs({
		category: activeCategory,
		path: [pageName],
		mod: 'bg-overlay-60',
		bgImage: 'breadcrumbs-bg'
	})

	// Why choose us
	section.section.section-sm.section-first.bg-default.text-md-start
		.container
			.row.row-50.justify-content-center.align-items-xl-center
				.col-md-10.col-lg-5.col-xl-6: +jpg('about-1-519x564')
				.col-md-10.col-lg-7.col-xl-6
					h1.text-spacing-25.fw-normal.title-opacity-9 Why choose us
					// Bootstrap tabs
					#tabs-4.tabs-custom.tabs-horizontal.tabs-line
