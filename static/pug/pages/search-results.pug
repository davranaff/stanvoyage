extends  ../_skeleton

//- Includes
include ../sections/_header-corporate
include ../components/_ui-posts
include ../components/_ui-quote

block variables
  - var activeCategory = 'pages'
  - var pageName = 'Search Results'

block page 
  // Page Header
  +header-corporate({})

  +breadcrumbs({
    category: activeCategory,
    path: [pageName],
    mod: 'bg-overlay-60',
    bgImage: 'breadcrumbs-bg'
  })

  // Search results
  section.section.section-xl.bg-default
    .container
      .row.justify-content-center
        .col-lg-9
          // RD Search
          form.rd-form.rd-search.rd-form-inline(action='search-results.html' method='GET')
            .form-wrap
              label.form-label(for='rd-search-form-input') Search
              input.form-input(id='rd-search-form-input' type='text' name='s' autocomplete='off')
            .form-wrap.form-button
              button.button.button-primary(type='submit') Search

          .rd-search-results

  // Page Footer
  include ../sections/_footer-corporate
