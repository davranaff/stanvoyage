extends  ../_skeleton

//- Includes
include ../sections/_header-corporate
include ../components/_ui-posts
block variables
  - var activeCategory = 'gallery'
  - var pageName = 'Full-width gallery'

block page 
  // Page Header
  +header-corporate({})

  +breadcrumbs({
    category: activeCategory,
    path: [pageName],
    mod: 'bg-overlay-48',
    bgImage: 'breadcrumbs-bg'
  })

  // Grid Gallery
  section.section.section-xl.section-fluid.bg-default.text-center.isotope-wrap
    .container-fluid
      include ../sections/_section-full-width-gallery
      .button-wrap: button.button.button-md.button-black-outline.button-wapasha Load More

  // Page Footer
  include ../sections/_footer-corporate