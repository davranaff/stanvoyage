mixin thumbnail-classic(obj)
	// Thumbnail Classic
	article.thumbnail.thumbnail-classic(class=obj.mod)
		.thumbnail-classic-figure
			+jpg(obj.nameImg + '-' + obj.numberImg + '-' + obj.sizeImg)

		.thumbnail-classic-caption
			.thumbnail-classic-title-wrap
				a.icon.fl-bigmug-line-zoom60(href='images/' + (obj.nameImgOriginal ? obj.nameImgOriginal : obj.nameImg + '-' + (obj.numberImgOriginal ? obj.numberImgOriginal : obj.numberImg)) + '-1200x800-original.jpg' data-lightgallery='item')
					+jpg(obj.nameImg + '-' + obj.numberImg + '-' + obj.sizeImg)
				h5.thumbnail-classic-title: a(href='single-tour.html')= 'Tour #' + (obj.numberProject ? obj.numberProject : obj.numberImg)
				if(obj.thumbnailText)
					p(class='thumbnail-classic-text')=obj.thumbnailText
				else
					p.thumbnail-classic-text thumbnail-classic-text We work hard on every project to deliver top-notch interior design concepts that satisfy your wishes.
mixin thumbnail-info(obj)
	// Thumbnail-info
	article.thumbnail-info
		+jpg(obj.nameImg + '-' + obj.numberImg + '-' + obj.sizeImg)
		.thumbnail-info-figure
			.counter-classic(class=obj.mod)
				.counter-classic-number
					span.counter=obj.number
					if(obj.symbol)
						span.symbol=obj.symbol
				.info-description=obj.description
