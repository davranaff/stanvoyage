//- Countdown
	@param {object} data
	@param {string} data.to
	@param {string} [data.from]
	@param {string} [data.count]
mixin countdown( data )
	.countdown( data-countdown data-from= data.from, data-to= data.to, data-count= data.count )
		each item in [ 'days', 'hours', 'minutes', 'seconds' ]
			- var attrProgress = {}; attrProgress['data-progress-' + item] = '';
			- var attrCounter = {}; attrCounter['data-counter-' + item] = '';
			.countdown-block( class= 'countdown-block-' + item )
				svg.countdown-circle( x='0', y='0', width='150', height='150', viewbox='0 0 150 150' )&attributes( attrProgress )
					circle.countdown-circle-bg( cx=75, cy=75, r=70 )
					circle.countdown-circle-fg.clipped( cx=75, cy=75, r=70 )
				.countdown-wrap
					.countdown-counter&attributes( attrCounter ) 00
				.countdown-title= item
